{
  "env": {
    "es6": true,
    "node": true,
    "jest": true,
    "browser": true
  },
  "settings": {
    "react": {
      "pragma": "React",
      "version": "16.13.0"
    }
  },
  "parser": "babel-eslint",
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "jsx-quotes": ["error", "prefer-single"],
    "space-before-blocks": ["error"],
    "object-curly-spacing": ["error", "always"],
    "react/prop-types": [
      "error",
      {
        "ignore": ["navigator"]
      }
    ],
    "no-console": "off",
    "indent": ["error", 2, { "SwitchCase": 1 }],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "never"]
  }
}
